<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="602.0" prefWidth="392.0" spacing="20" style="-fx-padding: 40; -fx-background-color: white;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nationalpark.controller.SignUpController">

    <Label text="Create New Account" textFill="#5853bc">
      <font>
         <Font size="16.0" />
      </font></Label>

    <VBox alignment="CENTER" prefHeight="499.0" prefWidth="312.0" spacing="15" style="-fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 30;">

        <Label text="User ID:" />
        <TextField fx:id="userIdField" prefWidth="250" />

        <Label text="Password:" />
        <PasswordField fx:id="passwordField" prefWidth="250" />

        <Label text="Confirm Password:" />
        <PasswordField fx:id="confirmPasswordField" prefWidth="250" />

        <Label text="Phone Number:" />
        <TextField fx:id="phoneField" prefWidth="250" />

        <Label text="User Type:" />
        <ComboBox fx:id="userTypeComboBox" prefWidth="250" />

        <HBox alignment="CENTER" spacing="10" />

         <Button onAction="#backOnActionButton" prefWidth="120" text="Back to Login" />
         <Button onAction="#signUpButton" prefWidth="100" text="Sign Up" />

        <Label fx:id="messageLabel" />
    </VBox>

</VBox>
