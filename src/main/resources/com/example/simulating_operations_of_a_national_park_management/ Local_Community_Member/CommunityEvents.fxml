<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainPane" prefHeight="600.0" prefWidth="692.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simulating_operations_of_a_national_park_management.Local_Community_Member.CommunityEventsController">

    <Label fx:id="titleLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Community Events" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0" />

    <VBox fx:id="mainContainer" spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="100.0">

        <HBox fx:id="searchBox" spacing="10.0">
            <TextField fx:id="searchEventTextField" prefWidth="200.0" promptText="Search events" />
            <ComboBox fx:id="EventTypeComboBox" prefWidth="150.0" promptText="Event Type" />
            <Button onAction="#searchButton" prefWidth="80.0" text="Search" />
        </HBox>

        <Label fx:id="availableLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Available Events" />

        <TableView fx:id="eventsTableView" prefHeight="250.0">
            <columns>
                <TableColumn fx:id="eventNameColumn" prefWidth="150.0" text="Event Name" />
                <TableColumn fx:id="eventDateColumn" prefWidth="100.0" text="Date" />
                <TableColumn fx:id="eventTypeColumn" prefWidth="100.0" text="Type" />
                <TableColumn fx:id="eventLocationColumn" prefWidth="120.0" text="Location" />
                <TableColumn fx:id="eventSlotsColumn" prefWidth="100.0" text="Available Slots" />
                <TableColumn fx:id="eventActionColumn" prefWidth="100.0" text="Action" />
            </columns>
        </TableView>

        <HBox fx:id="selectedEventBox" spacing="10.0">
            <Label fx:id="selectedLabel" text="Selected Event:" />
            <Label fx:id="selectedEventName" style="-fx-font-weight: bold;" />
            <Label fx:id="ShowselectedEvent" opacity="0.6" text="Show selected event" textOverrun="CLIP">
                <font>
                    <Font size="15.0" />
                </font>
            </Label>
            <Button onAction="#ViewregisterButton" prefWidth="100.0" text="Register" />
            <Button onAction="#ViewDetailButton" prefWidth="100.0" text="View Details" />
        </HBox>

        <Separator fx:id="separator1" />

        <Label fx:id="registeredLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="My Registered Events" />

        <TableView fx:id="registeredEventTableView" prefHeight="150.0">
            <columns>
                <TableColumn fx:id="regEventNameColumn" prefWidth="150.0" text="Event Name" />
                <TableColumn fx:id="regEventDateColumn" prefWidth="100.0" text="Date" />
                <TableColumn fx:id="regEventStatusColumn" prefWidth="100.0" text="Status" />
                <TableColumn fx:id="regEventActionColumn" prefWidth="100.0" text="Action" />
            </columns>
        </TableView>

        <HBox fx:id="actionBox" spacing="10.0">
            <Button onAction="#backToDashBButton" prefWidth="120.0" text="Back to Dashboard" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#cancelRegButton" prefWidth="120.0" text="Cancel Registration" />
        </HBox>

    </VBox>

</AnchorPane>
