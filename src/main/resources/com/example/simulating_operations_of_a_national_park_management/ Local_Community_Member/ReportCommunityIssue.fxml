<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600" prefWidth="575.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simulating_operations_of_a_national_park_management.Local_Community_Member.ReportCommunityIssueController">

    <Label layoutX="20" layoutY="20" text="Report Community Issue" />

    <Label layoutX="20" layoutY="100" text="Issue Type" />
    <ComboBox fx:id="issueTypeComboBox" layoutX="150" layoutY="95" prefWidth="200" />

    <Label layoutX="20" layoutY="140" text="Location" />
    <TextField fx:id="LocationTextField" layoutX="150" layoutY="135" prefWidth="200" />

    <Label layoutX="20" layoutY="180" text="Details" />
    <TextArea fx:id="DetailsTextArea" layoutX="150" layoutY="175" prefHeight="81.0" prefWidth="200.0" />

    <Label layoutX="20" layoutY="290" text="Priority" />
    <ComboBox fx:id="PriorityComboBox" layoutX="150" layoutY="285" prefWidth="200" />

    <Button layoutX="150" layoutY="330" onAction="#SubmitReportOnActionButton" prefWidth="120" text="Submit Report" />
    <Button layoutX="280" layoutY="330" onAction="#CancelOnActionButton" prefWidth="80" text="Cancel" />

    <TableView fx:id="IssueReportsTableView" layoutX="20" layoutY="380" prefHeight="150" prefWidth="405.0">
        <columns>
            <TableColumn fx:id="IssueIdTableColumn" prefWidth="132.0" text="Issue ID" />
            <TableColumn fx:id="TyoeTableColumn" prefWidth="129.0" text="Type" />
            <TableColumn fx:id="StatusTableColumn" prefWidth="143.0" text="Status" />
        </columns>
    </TableView>

    <Button layoutX="20" layoutY="550" onAction="#BackOnActionButton" prefWidth="80" text="Back" />

</AnchorPane>
