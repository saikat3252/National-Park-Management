<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.simulating_operations_of_a_national_park_management.Maintenance_Staff.ScheduleTaskController"
      spacing="20" style="-fx-padding: 30;">

    <Label text="Schedule Maintenance Task"
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2e8b57;" />

    <VBox spacing="15" style="-fx-border-color: #ddd; -fx-padding: 20;">
        <GridPane hgap="15" vgap="15">
            <Label text="Task Description:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold;" />
            <TextArea fx:id="descriptionField" GridPane.rowIndex="0" GridPane.columnIndex="1"
                      prefRowCount="3" prefWidth="300" />

            <Label text="Zone:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold;" />
            <ComboBox fx:id="zoneComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1"
                      prefWidth="300" />

            <Label text="Priority:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold;" />
            <ComboBox fx:id="priorityComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"
                      prefWidth="300" />

            <Label text="Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold;" />
            <DatePicker fx:id="datePicker" GridPane.rowIndex="3" GridPane.columnIndex="1" />

            <Label text="Team:" GridPane.rowIndex="4" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold;" />
            <TextField fx:id="teamField" GridPane.rowIndex="4" GridPane.columnIndex="1"
                       prefWidth="300" />
        </GridPane>

        <Separator />

        <HBox spacing="15" alignment="CENTER">
            <Button fx:id="validateButton" text="Validate Schedule"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
            <Button fx:id="saveButton" text="Save Task"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                    prefWidth="120" />
            <Button fx:id="cancelButton" text="Cancel"
                    style="-fx-background-color: #999; -fx-text-fill: white;" />
        </HBox>

        <Label fx:id="validationLabel" />
    </VBox>

</VBox>