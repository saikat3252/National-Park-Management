<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simulating_operations_of_a_national_park_management.Maintenance_Staff.MaintenanceDashBoardController">


    <Label layoutX="200" layoutY="20" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Maintenance Dashboard" />

    <Label fx:id="userLabel" layoutX="50" layoutY="60" text="Show User" />


    <VBox layoutX="50.0" layoutY="137.0" prefHeight="300.0" prefWidth="200.0" spacing="10">
        <Label style="-fx-font-weight: bold;" text="Schedule New Task" />

        <TextField fx:id="taskField" prefWidth="200" promptText="Task description" />
      <ComboBox fx:id="zoneComboBox" prefWidth="300" promptText="Select zone" />
      <ComboBox fx:id="priorityComboBox" prefWidth="300" promptText="Select priority" />
      <Label layoutX="10.0" layoutY="169.0" text="Date" />
      <DatePicker fx:id="taskDatePicker" prefHeight="25.0" prefWidth="138.0" />

        <Label fx:id="scheduleMessage" />
      <Label text="Timel" />
      <TextField fx:id="taskTimeField" prefHeight="25.0" prefWidth="102.0" />
      <Button fx:id="saveScheduleButton" onAction="#handleSaveSchedule" prefWidth="150" text="Save Schedule" />
      <Button fx:id="UpdateCalenderButton" onAction="#UpdateCalenderOnActionButton" text="Update Calender" />
    </VBox>

    <VBox layoutX="300" layoutY="100" spacing="10">
        <Label style="-fx-font-weight: bold;" text="Other Tasks" />

        <Button onAction="#goToReportIssue" prefWidth="200" text="Report Issue" />

        <Button onAction="#goToCheckStatus" prefWidth="200" text="Check Status" />

        <Button onAction="#goToUpdateTask" prefWidth="200" text="Update Task" />

        <Button onAction="#goToUtilityCheck" prefWidth="200" text="Utility Check" />

        <Button onAction="#goToRequestMaterials" prefWidth="200" text="Request Materials" />

        <Button onAction="#goToEmergency" prefWidth="200" text="Emergency" />

        <Button onAction="#goToGenerateReport" prefWidth="200" text="Generate Report" />
    </VBox>


    <VBox layoutX="50" layoutY="300" spacing="5" />

    <Button layoutX="500" layoutY="450" onAction="#handleLogout" text="Logout" />

</AnchorPane>
