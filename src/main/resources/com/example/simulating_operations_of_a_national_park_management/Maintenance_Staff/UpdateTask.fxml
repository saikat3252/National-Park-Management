<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simulating_operations_of_a_national_park_management.Maintenance_Staff.UpdateTaskController">
    <children>
        <Label layoutX="200.0" layoutY="30.0" prefWidth="200.0" text="Update Task Status">
            <font>
                <Font size="20.0" />
            </font>
        </Label>

        <Label layoutX="50.0" layoutY="100.0" text="Task ID:" />
        <TextField fx:id="taskIdaTextField" layoutX="120.0" layoutY="95.0" prefWidth="200.0" />

        <Label layoutX="50.0" layoutY="150.0" text="New Status:" />
        <ComboBox fx:id="statusComboBox" layoutX="120.0" layoutY="145.0" prefWidth="200.0" />

        <Label layoutX="50.0" layoutY="200.0" text="Completion Date:" />
        <DatePicker fx:id="CompletiondatePicker" layoutX="150.0" layoutY="196.0" prefWidth="200.0" />

        <Button layoutX="150.0" layoutY="250.0" onAction="#MarkAsComButton" text="Mark as Completed" />

        <Label fx:id="messageLabel" layoutX="50.0" layoutY="300.0" prefWidth="500.0" />
    </children>
</AnchorPane>
