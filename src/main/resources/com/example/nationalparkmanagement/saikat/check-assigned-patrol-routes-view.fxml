<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.nationalparkmanagement.saikat.CheckAssignedPatrolRoutesViewController"
            prefHeight="400.0" prefWidth="600.0">

    <children>

        <VBox spacing="15" layoutX="30" layoutY="20" prefWidth="540">
            <children>

                <Label text="Check Assigned Patrol Routes"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;" />

                <HBox spacing="10">
                    <children>
                        <Label text="Ranger ID:" />
                        <TextField fx:id="rangerIdField" promptText="Enter Ranger ID" prefWidth="200"/>
                        <Button text="Search" onAction="#onSearchRoute"/>
                    </children>
                </HBox>

                <TableView fx:id="routeTable" prefHeight="300">
                    <columns>
                        <TableColumn fx:id="colRouteId" text="Route ID" prefWidth="120"/>
                        <TableColumn fx:id="colRegion" text="Region" prefWidth="180"/>
                        <TableColumn fx:id="colSchedule" text="Schedule" prefWidth="200"/>
                    </columns>
                </TableView>

            </children>
        </VBox>

    </children>

</AnchorPane>

